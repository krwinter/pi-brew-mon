{
  "name": "todomvc-flux",
  "version": "0.0.3",
  "description": "Example Flux architecture.",
  "repository": "https://github.com/facebook/flux",
  "main": "scripts/app.js",
  "dependencies": {
    "backbone-jquery": "^1.0.1",
    "classnames": "^2.1.3",
    "es6-promise": "^3.0.2",
    "exorcist": "^0.4.0",
    "flux": "^2.0.1",
    "jquery": "^2.2.0",
    "keymirror": "~0.1.0",
    "object-assign": "^1.0.0",
    "react": "^0.14.6"
  },
  "devDependencies": {
    "browserify": "^6.2.0",
    "envify": "^3.0.0",
    "jest-cli": "^0.4.3",
    "reactify": "^0.15.2",
    "uglify-js": "~2.4.15",
    "watchify": "^2.1.1"
  },
  "scripts": {
    "start": "watchify --exclude node_modules -o scripts/main.js -v -d scripts/app.js | exorcist scripts/main.map.js ",
    "build": "browserify . -t [envify --NODE_ENV production] | exorcist scripts/main.map.js | uglifyjs -cm > scripts/main.min.js",
    "test": "jest"
  },
  "author": "Bill Fisher",
  "browserify": {
    "transform": [
      "reactify",
      "envify"
    ]
  },
  "jest": {
    "rootDir": "./scripts"
  }
}
